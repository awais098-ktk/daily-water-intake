# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Google Fit OAuth Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_FIT_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_FIT_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# Fitbit OAuth Credentials (optional)
# Get these from Fitbit Developer Console: https://dev.fitbit.com/
FITBIT_CLIENT_ID=YOUR_FITBIT_CLIENT_ID_HERE
FITBIT_CLIENT_SECRET=YOUR_FITBIT_CLIENT_SECRET_HERE

# OpenWeatherMap API Key (optional, for weather features)
# Get one from: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=YOUR_OPENWEATHERMAP_API_KEY_HERE

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration (optional, defaults to SQLite)
DATABASE_URL=sqlite:///water_tracker.db

# Email Configuration (optional, for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
