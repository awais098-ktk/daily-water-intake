						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Progress API successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('success', true);",
									"    pm.expect(response).to.have.property('total_intake');",
									"    pm.expect(response).to.have.property('daily_goal');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/progress",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"progress"
							]
						}
					}
				},
